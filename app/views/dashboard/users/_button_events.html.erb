<script>
  $(function() {

    $('body').on('click', 'button.delete-group', function(e) {
      e.preventDefault();

      if (confirm('Are you sure you want to delete this <%= @entity_name %>?')) {
        var button = $(this);
        $.ajax({
          url: Routes.groups_delete_path(), 
          type: 'DELETE', 
          data: {id: button.attr('data-id')}, 
          complete: function(message) {
            ajax_notification(message);
            $(button).parents('tr').remove();
          }
        }); 
      }
    });
    $('body').on('click', 'button.store-settings', function(e) {
      e.preventDefault(); 
      var button = $(this);
      window.location = Routes.customer_settings_path('Store', button.attr('data-id')); 
    });
    $('body').on('click', 'button.store-devices', function(e) {
      e.preventDefault(); 
      var button = $(this);
      window.location = Routes.devices_path('Store', button.attr('data-id')); 
    });
    $('body').on('click', 'button.store-users', function(e) {
      e.preventDefault(); 
      var button = $(this);
      window.location = Routes.users_path('Store', button.attr('data-id')); 
    });
  });
</script>
