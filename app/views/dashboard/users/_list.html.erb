<table id="entities-table" class="table table-striped table-hover table-bordered" data-source="<%= dashboard_users_path(format: :json) %>">
  <thead>
    <tr class="filters">
      <th><input/></th>
      <th><input/></th>
      <th><input/></th>
      <th></th>
      <th><input/></th>
      <th><input/></th>
      <th></th>
    </tr>
    <tr>
      <th>ID</th>
      <th>Full Name</th>
      <th>Roles</th>
      <th>Owner</th>
      <th>Owner type</th>
      <th>Avatar</th>
      <th class="actions">Actions</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<script>
  $(document).ready(function() {
    var table = $('#entities-table').DataTable({
      processing: true,
      serverSide: true,
      responsive: false,
      ajax: {
        url: $('#entities-table').data('source'),
        type: 'POST'
      },
      dom: 'flBrtip',
      pagingType: "full_numbers",
      columns: [
        { searchable: true, orderable: true, data: 'id'},
        { searchable: true, orderable: true, data: 'name'},
        { searchable: false, orderable: false, data: 'roles'},
        { searchable: false, orderable: false, data: 'owner'},
        { searchable: false, orderable: true, data: 'owner_type'},
        { searchable: false, orderable: false, data: 'avatar'},
        { searchable: false, orderable: false, data: 'actions'}
      ],
      order: [[ 2, 'asc' ]], // Entity name
      initComplete: function() {
        $('.filters input, .filters select', this).on('change', (function(_this) {
          return function(e) {
            var th;
            th = $(e.target).closest("th");
            return _this.api().column(th.index()).search($(e.target).val()).draw();
          };
        })(this));
      },
      buttons: get_datatable_buttons(table, {
        select: false, 
        toggle: false, 
        delete: false, 
        export: true, 
      }),
    });
  });
</script>
